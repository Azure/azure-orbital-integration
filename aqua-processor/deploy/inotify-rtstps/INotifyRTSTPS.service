[Unit]
Wants=network.target
After=network.target

[Service]
WorkingDirectory=/home/azureuser/rt-stps
ExecStartPre=/bin/sleep 10
ExecStart=/bin/bash /usr/share/INotifyRTSTPS/inotify-rtstps.sh
LimitNOFILE=65536
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
